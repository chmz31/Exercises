package es.ifp.programacion.uf6.persistencia;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class Main {

	public static void main(String[] args) { 
		
		
		
		try {
			
			//1.- Establecer la conexi√≥n con la BBDD. 	
		Connection conexion = DriverManager.getConnection("jdbc:mysql://localhost:testDB" , "root","");
		
			//2.- Preparamos la consulta 
		
		Statement sentencia = conexion.createStatement();
		
			//3.- Indicar la consulta SQL 
		String sql = "Select idUsuario, nombre, apellido1, apellido2 from usuarios";
		
			//4.- Ejecutamos la consulta 
		sentencia.executeQuery(sql);
		
		} catch (SQLException e){
			e.printStackTrace();
		}
		
		
		
	}

}
